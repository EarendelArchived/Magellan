+import java.util.List;
+import java.util.Map;
+import static team.earendel.template.configurations.TemplateConfiguration.log;
+
+@SuppressWarnings("unused")
+public class TemplateWorldConfiguration {
+
+    private final String worldName;
+    private final World.Environment environment;
+
+    public TemplateWorldConfiguration(String worldName, World.Environment environment) {
+        this.worldName = worldName;
+        this.environment = environment;
+        init();
+    }
+
+    public void init() {
+        log("-------- World Configurations For [" + worldName + "] --------");
+        TemplateConfiguration.readConfig(TemplateWorldConfiguration.class, this);
+    }
+
+    private void set(String path, Object val) {
+        TemplateConfiguration.configuration.addDefault("world-configurations.default." + path, val);
+        TemplateConfiguration.configuration.set("world-configurations.default." + path, val);
+        if (TemplateConfiguration.configuration.get("world-configurations." + worldName + "." + path) != null) {
+            TemplateConfiguration.configuration.addDefault("world-configurations." + worldName + "." + path, val);
+            TemplateConfiguration.configuration.set("world-configurations." + worldName + "." + path, val);
+        }
+    }
+
+    private ConfigurationSection getConfigurationSection(String path) {
+        ConfigurationSection section = TemplateConfiguration.configuration.getConfigurationSection("world-configurations." + worldName + "." + path);
+        return section != null ? section : TemplateConfiguration.configuration.getConfigurationSection("world-configurations.default." + path);
+    }
+
+    private String getString(String path, String def) {
+        TemplateConfiguration.configuration.addDefault("world-configurations.default." + path, def);
+        return TemplateConfiguration.configuration.getString("world-configurations." + worldName + "." + path, TemplateConfiguration.configuration.getString("world-configurations.default." + path));
+    }
+
+    private int getInt(String path, int def) {
+        TemplateConfiguration.configuration.addDefault("world-configurations.default." + path, def);
+        return TemplateConfiguration.configuration.getInt("world-configurations." + worldName + "." + path, TemplateConfiguration.configuration.getInt("world-configurations.default." + path));
+    }
+
+    private boolean getBoolean(String path, boolean def) {
+        TemplateConfiguration.configuration.addDefault("world-configurations.default." + path, def);
+        return TemplateConfiguration.configuration.getBoolean("world-configurations." + worldName + "." + path, TemplateConfiguration.configuration.getBoolean("world-configurations.default." + path));
+    }
+
+    private double getDouble(String path, double def) {
+        TemplateConfiguration.configuration.addDefault("world-configurations.default." + path, def);
+        return TemplateConfiguration.configuration.getDouble("world-configurations." + worldName + "." + path, TemplateConfiguration.configuration.getDouble("world-configurations.default." + path));
+    }
+
+    private double getLong(String path, long def) {
+        TemplateConfiguration.configuration.addDefault("world-configurations.default." + path, def);
+        return TemplateConfiguration.configuration.getLong("world-configurations." + worldName + "." + path, TemplateConfiguration.configuration.getLong("world-configurations.default." + path));
+    }
+
+    private <T> List<?> getList(String path, T def) {
+        TemplateConfiguration.configuration.addDefault("world-configurations.default." + path, def);
+        return TemplateConfiguration.configuration.getList("world-configurations." + worldName + "." + path, TemplateConfiguration.configuration.getList("world-configurations.default." + path));
+    }
+
+    private Map<String, Object> getMap(String path, Map<String, Object> def) {
+        final Map<String, Object> fallback = TemplateConfiguration.getMap("world-configurations.default." + path, def);
+        final Map<String, Object> value = TemplateConfiguration.getMap("world-configurations." + worldName + "." + path, null);
+        return value.isEmpty() ? fallback : value;
+    }
+}
